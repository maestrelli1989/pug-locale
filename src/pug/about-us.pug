extends layouts/_layout.pug

block meta-data
	title #{$i18n.aboutUs.metaTitle}
	meta(name="description", content="#{$i18n.aboutUs.metaDescription}")
	link(rel="canonical", href="#{$i18n.aboutUs.canonical}")

block header
	+header('red-header')

block mobile-menu
	+mobile-menu('mobile-menu-red')

block main-content
	.inner-page-wrapper.about-us-page
		.intro-block.red-intro-block
			.container.main-container
				h1 #{$i18n.aboutUs.pageHeadline}
		.about-us-content
			.first-block
				.container.main-container
					.flex-block.animatedParent.animateOnce(data-sequence='500')
						.flex-left.animated.fadeIn(data-id='1')
							p
								b #{$i18n.aboutUs.introLine1}
							p #{$i18n.aboutUs.introLine2}
							p #{$i18n.aboutUs.introLine3}
						.flex-right.animated.fadeIn(data-id='2')
							img(src="../assets/images/svg/uapay.svg", alt="Image", style="width: 340px")
			block preferences-block
				+preferences('black-background')
			block trust-block
				+trust
			block partners-block
				+partners
			.last-block
				.container.main-container.animatedParent.animateOnce(data-sequence='500')
					h5.animated.fadeIn(data-id='1') #{$i18n.aboutUs.finalBlockHeadline}
					.media-block.animatedParent.animateOnce(data-sequence='500')
						img(class="animated fadeIn", data-id='1', src="../assets/images/about-us/media/ain.png", alt="Logo")
						img(class="animated fadeIn", data-id='2', src="../assets/images/about-us/media/minfin.png", alt="Logo")
						img(class="animated fadeIn", data-id='3', src="../assets/images/about-us/media/mind.png", alt="Logo")
						img(class="animated fadeIn", data-id='4', src="../assets/images/about-us/media/interfax.png", alt="Logo")