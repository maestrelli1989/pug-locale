							i.fas
					.collapse#mobile-menu-collapse1(aria-labelledby="mobile-menu-heading1", data-parent="#mobile-menu-accordion")
						ul.links-wrapper
							li: a(href="uapay-checkout") #{$i18n.headerMenu.col1Link1}
							li: a(href="mass-payouts") #{$i18n.headerMenu.col1Link2}
							li: a(href="industry-solutions") #{$i18n.headerMenu.col1Link3}
				.mobile-menu-accordion-item
					#mobile-menu-heading2
						a(class="accordion-headline collapsed", href="javascript:void(0);", role="button", data-toggle="collapse", data-target="#mobile-menu-collapse2", aria-expanded="false", aria-controls="mobile-menu-collapse2")
							span #{$i18n.headerMenu.col2Title}
							i.fas
					.collapse#mobile-menu-collapse2(aria-labelledby="mobile-menu-heading2", data-parent="#mobile-menu-accordion")
						ul.links-wrapper
							li: a(href="fines") #{$i18n.headerMenu.col2Link1}
							li: a(href="https://escrowbox.uapay.ua/ad", target="_blank") #{$i18n.headerMenu.col2Link2}
				.mobile-menu-accordion-item
					#mobile-menu-heading3
						a(class="accordion-headline collapsed", href="javascript:void(0);", role="button", data-toggle="collapse", data-target="#mobile-menu-collapse3", aria-expanded="false", aria-controls="mobile-menu-collapse3")
							span #{$i18n.headerMenu.col3Title}
							i.fas
					.collapse#mobile-menu-collapse3(aria-labelledby="mobile-menu-heading3", data-parent="#mobile-menu-accordion")
						ul.links-wrapper
							li: a(href="about-us") #{$i18n.headerMenu.col3Link1}
							//li: a(href="news") #{$i18n.headerMenu.col3Link2}
							li: a(href="faq") #{$i18n.headerMenu.col3Link3}
							li: a(href="javascript:void(0);") #{$i18n.headerMenu.col3Link4}
							li: a(href="legal-info") #{$i18n.headerMenu.col3Link5}
				.mobile-menu-accordion-item
					#mobile-menu-heading4
						a(class="accordion-headline collapsed", href="javascript:void(0);", role="button", data-toggle="collapse", data-target="#mobile-menu-collapse4", aria-expanded="false", aria-controls="mobile-menu-collapse4")
							span #{$i18n.headerMenu.col4Title}
							i.fas
					.collapse#mobile-menu-collapse4(aria-labelledby="mobile-menu-heading4", data-parent="#mobile-menu-accordion")
						ul.links-wrapper
							li: a(href="https://uapayua.atlassian.net/wiki/spaces/AC/pages/753795086", target="_blank") #{$i18n.headerMenu.col4Link1}
							li: a(href="https://uapayua.atlassian.net/wiki/spaces/AC/pages/753795086", target="_blank") #{$i18n.headerMenu.col4Link2}
			a.btn-ghost-white(href="https://account.uapay.ua/auth/register", target="_blank") #{$i18n.headerMenu.userAccount}
			a.feedback-link(href="feedback") #{$i18n.headerMenu.feedback}

