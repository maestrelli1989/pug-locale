	.developers-block(class=className)
		.container.main-container
			.flex-block.animatedParent.animateOnce(data-sequence='100')
				.flex-left.animated.fadeIn(data-id='1')
					img(src=src, alt="Image")
				.flex-right.animated.fadeIn(data-id='1')
					h4 #{$i18n.developersBlock.blockHeadline}
					p #{$i18n.developersBlock.blockContent}
					include ../includes/components/_developers-btn.pug

