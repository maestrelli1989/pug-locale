//- Developers block mixin

mixin developers(className)
	.developers-block(class=className)
		.container.main-container
			.flex-block.animatedParent.animateOnce(data-sequence='500')
				.flex-left.animated.fadeIn(data-id='1')
					img(src="./images/svg/api-cms.svg", alt="Image")
				.flex-right.animated.fadeIn(data-id='2')
					h4 Розробникам
					p Ми надаємо універсальний платіжний API і готові модулі для CMS-систем, які дозволять дуже швидко і просто підключити оплату на сайті.
					include ../includes/components/_developers-btn.pug

//- Partners block mixin

mixin partners(className)
	.partners-block(class=className)
		.container.main-container
			.flex-block.animatedParent.animateOnce(data-sequence='500')
				.flex-left.animated.fadeIn(data-id='1')
					img(src="./images/svg/percent.svg", alt="Image")
				.flex-right.animated.fadeIn(data-id='2')
					h4 Партнерам
					p Ми завжди відкриті до співпраці з новими партнерами і до надання якісного сервісу широкому спектру клієнтів. Тому для всіх, хто пов'язаний з онлайн-бізнесом, наша партнерська програма дає можливість заробляти на рекомендаціях і підключених клієнтах.
					include ../includes/components/_partnership-btn.pug