//- Meta data mixin

mixin meta-data(title, description, href)
	title=title
	meta(name="description", content=description)
	link(rel="canonical", href=href)

//- Header mixin

mixin header(className)
	header.header(class=className)
		.container
			.header-flex.fade-in-down-effect
				.header-flex-left
					a(href="index", class="site-logo-link")
						img(src="../assets/images/logo/site-logo.png", alt="Logo")
					.menu
						.menu-item
							.menu-trigger#business-trigger #{$i18n.headerMenu.col1Title}
							.sub-menu-wrapper#business-sub-menu
								.triangle
								.sub-menu.business-sub-menu
									a(href="uapay-checkout") #{$i18n.headerMenu.col1Link1}
									a(href="mass-payouts") #{$i18n.headerMenu.col1Link2}
									a(href="industry-solutions") #{$i18n.headerMenu.col1Link3}
						.menu-item
							.menu-trigger#user-trigger #{$i18n.headerMenu.col2Title}
							.sub-menu-wrapper#user-sub-menu
								.triangle
								.sub-menu.user-sub-menu
									a(href="fines") #{$i18n.headerMenu.col2Link1}
									a(href="https://escrowbox.uapay.ua/ad", target="_blank") #{$i18n.headerMenu.col2Link2}
						.menu-item
							.menu-trigger#company-trigger #{$i18n.headerMenu.col3Title}
							.sub-menu-wrapper#company-sub-menu
								.triangle
								.sub-menu.company-sub-menu
									a(href="about-us") #{$i18n.headerMenu.col3Link1}
									//a(href="news") #{$i18n.headerMenu.col3Link2}
									a(href="faq") #{$i18n.headerMenu.col3Link3}
									a(href="partnership") #{$i18n.headerMenu.col3Link4}
									a(href="legal-info") #{$i18n.headerMenu.col3Link5}
						.menu-item
							.menu-trigger#developers-trigger #{$i18n.headerMenu.col4Title}
							.sub-menu-wrapper#developers-sub-menu
								.triangle
								.sub-menu.developers-sub-menu
									a(href="https://uapayua.atlassian.net/wiki/spaces/AC/pages/753795086", target="_blank") #{$i18n.headerMenu.col4Link1}
									a(href="https://uapayua.atlassian.net/wiki/spaces/AC/pages/753795086", target="_blank") #{$i18n.headerMenu.col4Link2}
				.header-flex-right
					a.feedback-link(href="feedback") #{$i18n.headerMenu.feedback}
					a.btn-ghost-white(href="https://account.uapay.ua/auth/register", target="_blank") #{$i18n.headerMenu.userAccount}
					.languages 
						span.current-lang#current-lang #{$i18n.footerIntro.currentLang}
						.lang-items
							.sub-menu
								a(href="javascript:void(0);", onclick="switchToUaLocale()") UA
								a(href="javascript:void(0);", onclick="switchToRuLocale()") RU
								a(href="javascript:void(0);", onclick="switchToEnLocale()") EN
					.burger
						.burger-box
							.burger-inner

//- Mobile menu mixin

mixin mobile-menu(className)
	.mobile-menu(class=className)
		+header
		.mobile-menu-row
			.mobile-menu-col
				.mobile-menu-trigger #{$i18n.headerMenu.col1Title}
				a(class="mobile-menu-link", href="uapay-checkout") #{$i18n.headerMenu.col1Link1}
				a(class="mobile-menu-link", href="mass-payouts") #{$i18n.headerMenu.col1Link2}
				a(class="mobile-menu-link", href="industry-solutions") #{$i18n.headerMenu.col1Link3}
			.mobile-menu-col
				.mobile-menu-trigger #{$i18n.headerMenu.col2Title}
				a(class="mobile-menu-link", href="fines") #{$i18n.headerMenu.col2Link1}
				a(class="mobile-menu-link", href="https://escrowbox.uapay.ua/ad", target="_blank") #{$i18n.headerMenu.col2Link2}
			.mobile-menu-col
				.mobile-menu-trigger #{$i18n.headerMenu.col3Title}
				a(class="mobile-menu-link", href="about-us") #{$i18n.headerMenu.col3Link1}
				//a(class="mobile-menu-link", href="news") #{$i18n.headerMenu.col3Link2}
				a(class="mobile-menu-link", href="faq") #{$i18n.headerMenu.col3Link3}
				a(class="mobile-menu-link", href="partnership") #{$i18n.headerMenu.col3Link4}
				a(class="mobile-menu-link", href="legal-info") #{$i18n.headerMenu.col3Link5}
			.mobile-menu-col
				.mobile-menu-trigger #{$i18n.headerMenu.col4Title}
				a(class="mobile-menu-link", href="https://uapayua.atlassian.net/wiki/spaces/AC/pages/753795086", target="_blank") #{$i18n.headerMenu.col4Link1}
				a(class="mobile-menu-link", href="https://uapayua.atlassian.net/wiki/spaces/AC/pages/753795086", target="_blank") #{$i18n.headerMenu.col4Link2}
