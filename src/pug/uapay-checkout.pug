extends layouts/_layout.pug

block meta-data
	title #{$i18n.uapayCheckout.metaTitle}
	meta(name="description", lang="uk", content="Підключіть еквайринг і приймайте онлайн-платежі у вашому інтернет-магазині або на будь-якому іншому сайті!")
	meta(name="description", lang="ru", content="Подключите эквайринг и принимайте онлайн-платежи в вашем интернет-магазине или на любом другом сайте!")
	meta(name="description", lang="en", content="Set up acquiring and accept online payments at your online store or at any other website!")
	meta(property="og:title", lang="uk", content="Інтернет-еквайринг від UAPAY: приймайте платежі на вашому сайті")
	meta(property="og:title", lang="ru", content="Интернет-эквайринг от UAPAY: принимайте платежи на вашем сайте")
	meta(property="og:title", lang="en", content="UAPAY Internet Acquiring: Accept Payments on Your Website")
	meta(property="og:description", lang="uk", content="Підключіть еквайринг і приймайте онлайн-платежі у вашому інтернет-магазині або на будь-якому іншому сайті!")
	meta(property="og:description", lang="ru", content="Подключите эквайринг и принимайте онлайн-платежи в вашем интернет-магазине или на любом другом сайте!")
	meta(property="og:description", lang="en", content="Set up acquiring and accept online payments at your online store or at any other website!")

block header
	+header('red-header')

block mobile-menu
	+mobile-menu('mobile-menu-red')

block main-content
	.inner-page-wrapper.uapay-checkout-page
		.intro-block.red-intro-block
			.container.main-container
				h1 #{$i18n.uapayCheckout.pageHeadline}
		.uapay-checkout-content
			.first-block
				.container.main-container
					.flex-block.animatedParent.animateOnce(data-sequence='100')
						.flex-left.animated.fadeIn(data-id='1')
							p #{$i18n.uapayCheckout.introPart1}
							p #{$i18n.uapayCheckout.introPart2}
							p #{$i18n.uapayCheckout.introPart3}
							include includes/components/_join-now-btn.pug
						.flex-right.animated.fadeIn(data-id='1')
							img(src="../assets/images/svg/checkout.svg", alt="Image")
			.second-block
				.container.main-container.animatedParent.animateOnce
					h4.animated.fadeIn #{$i18n.uapayCheckout.secondBlockTitle}
					.flex-block
						.flex-left
							.flex-item.animated.fadeIn
								img.animated.fadeIn(src="../assets/images/uapay-checkout/safe.png", alt="Image", style="width: 48px; height: 48px;")
								h3.animated.fadeIn #{$i18n.uapayCheckout.item1Title}
								p.animated.fadeIn #{$i18n.uapayCheckout.item1Content}
							.flex-item.animated.fadeIn
								img.animated.fadeIn(src="../assets/images/uapay-checkout/qr.png", alt="Image", style="width: 48px; height: 48px;")
								h3.animated.fadeIn #{$i18n.uapayCheckout.item2Title}
								p.animated.fadeIn #{$i18n.uapayCheckout.item2Content}
							.flex-item.animated.fadeIn
								img.animated.fadeIn(src="../assets/images/uapay-checkout/paperless.png", alt="Image", style="width: 48px; height: 48px;")
								h3.animated.fadeIn #{$i18n.uapayCheckout.item3Title}
								p.animated.fadeIn #{$i18n.uapayCheckout.item3Content}
							.flex-item.animated.fadeIn
								img.animated.fadeIn(src="../assets/images/uapay-checkout/delivery.png", alt="Image", style="width: 48px; height: 48px;")
								h3.animated.fadeIn #{$i18n.uapayCheckout.item4Title}
								p.animated.fadeIn #{$i18n.uapayCheckout.item4Content}
						.flex-right
							.flex-item.animated.fadeIn
								img.animated.fadeIn(src="../assets/images/uapay-checkout/subscription.png", alt="Image", style="width: 48px; height: 48px;")
								h3.animated.fadeIn #{$i18n.uapayCheckout.item5Title}
								p.animated.fadeIn #{$i18n.uapayCheckout.item5Content}
							.flex-item.animated.fadeIn
								img.animated.fadeIn(src="../assets/images/uapay-checkout/escrow.png", alt="Image", style="width: 48px; height: 48px;")
								h3.animated.fadeIn #{$i18n.uapayCheckout.item6Title}
								p.animated.fadeIn #{$i18n.uapayCheckout.item6Content}
							.flex-item.animated.fadeIn
								img.animated.fadeIn(src="../assets/images/uapay-checkout/cart.png", alt="Image", style="width: 48px; height: 48px;")
								h3.animated.fadeIn #{$i18n.uapayCheckout.item7Title}
								p.animated.fadeIn #{$i18n.uapayCheckout.item7Content}
							.flex-item.animated.fadeIn
								img.animated.fadeIn(src="../assets/images/uapay-checkout/comfort.png", alt="Image", style="width: 48px; height: 48px;")
								h3.animated.fadeIn #{$i18n.uapayCheckout.item8Title}
								p.animated.fadeIn #{$i18n.uapayCheckout.item8Content}
			.third-block
				.container.main-container.animatedParent.animateOnce(data-sequence='100')
					h4.animated.fadeIn(data-id='1') #{$i18n.uapayCheckout.tariffsTitle}
					.flex-block
						.flex-left.animated.fadeIn(data-id='2')
							h2.animated.fadeIn(data-id='3') #{$i18n.uapayCheckout.tariffsLeftBlockTitle}
							p.animated.fadeIn(data-id='4') #{$i18n.uapayCheckout.tariffsLeftBlockMainDesc}
							.bonus.animated.fadeIn(data-id='4')
								.percent-value #{$i18n.uapayCheckout.bonusItem1}
								.percent-description
									.line-top #{$i18n.uapayCheckout.bonusItem2}
									.line-bottom #{$i18n.uapayCheckout.bonusItem3}
							ul
								li.animated.fadeIn(data-id='5') #{$i18n.uapayCheckout.tariffsLeftBlockli1}
								li.animated.fadeIn(data-id='6') #{$i18n.uapayCheckout.tariffsLeftBlockli2}
								li.animated.fadeIn(data-id='7') #{$i18n.uapayCheckout.tariffsLeftBlockli3}
								li.animated.fadeIn(data-id='8') #{$i18n.uapayCheckout.tariffsLeftBlockli4}
							a.btn-white.animated.fadeIn(data-id='9', href="https://account.uapay.ua/auth/register", target="_blank") #{$i18n.uapayCheckout.tariffsLeftBlockBtn}
						.flex-right.animated.fadeIn(data-id='2')
							h2.animated.fadeIn(data-id='3') #{$i18n.uapayCheckout.tariffsRightBlockTitle}
							p.animated.fadeIn(data-id='4') #{$i18n.uapayCheckout.tariffsRightBlockMainDesc}
							ul
								li.animated.fadeIn(data-id='5') #{$i18n.uapayCheckout.tariffsRightBlockLi1}
								li.animated.fadeIn(data-id='6') #{$i18n.uapayCheckout.tariffsRightBlockLi2}
								li.animated.fadeIn(data-id='7') #{$i18n.uapayCheckout.tariffsRightBlockLi3}
								li.animated.fadeIn(data-id='8') #{$i18n.uapayCheckout.tariffsRightBlockLi4}
							a.btn-gainsboro.animated.fadeIn(data-id='9', href="https://business.uapay.ua/about/contacts", target="_blank") #{$i18n.uapayCheckout.tariffsRightBlockBtn}
			block developers-block
				+developers('gray-background', '../assets/images/svg/api-cms.svg')